{% extends "layout.twig" %}

{% block contenido %}
    <h2>Listado Entradas</h2>
    <a class="btn btn-primary" href="{{ 'admin/entradas/crear' | url }}">Nueva Entrada</a>
    <table class="table">
        <tr>
            <th>Titulo</th>
            <th></th>
            <th></th>
        </tr>
        {% for entrada in entradasBlog %}
            <tr>
                <td>{{ entrada.titulo }}</td>
                <td><a href="{{ 'admin/entradas/editar/' | url }}{{ entrada.id }}">Editar</a></td>
                <td><a href="{{ 'admin/entradas/borrar/' | url }}{{ entrada.id }}">Borrar</a></td>
            </tr>
        {% endfor %}
    </table>
{% endblock %}
